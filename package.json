    "pixi.js": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "yjs": {
      "optional": true
    },
    "pixi.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18",
    "yjs": "^13.6.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vibevibes/experience-sdk"
